<div class="container">
  <h2><%= @list.name %></h2>
   <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <div class="card-product mb-3">
    <img src="https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8bW92aWUlMjBnZW5lcmFsfGVufDB8fDB8fHww&auto=format&fit=crop&w=800&q=60" />
    <div class="card-product-infos">
      <h2><%= movie.title %></h2>
      <p><%= bookmark.comment %></p>
      <p><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete} %></p>
    </div>
  </div>
  <% end %>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list), :class => "btn-ghost" %>
  <%= link_to "Back to lists", root_path, :class => "btn-ghost" %>
</div>
